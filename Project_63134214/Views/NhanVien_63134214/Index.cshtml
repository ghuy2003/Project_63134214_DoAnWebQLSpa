@model IEnumerable<Project_63134214.Models.NhanVien>

@{
    ViewBag.Title = "Index";
}
<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
                    <h2>Danh sách nhân viên</h2>

                    <p>
                        @Html.ActionLink("+Thêm nhân viên", "Create")
                    </p>
                    <div class="form-group">
                        @using (Html.BeginForm("Index","NhanVien",FormMethod.Post, new {@class = "navbar-form navbar-right"}))
            {
                    <div>
                        <input type="text" name="strSearch" placeholder="Tìm kiếm nhân viên" class="form-control"/>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-default">Tìm kiếm</button>
                    </div>
            }
                    </div>
                    <table class="table">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.HoTen)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.GioiTinh)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Email)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.SoDienThoai)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.IdChucVu)
                            </th>

                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.HoTen)
                                </td>
                                <td>
                                    @(item.GioiTinh?"Nam":"Nữ")
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SoDienThoai)
                                </td>
                                <td>
                                    @(item.ChucVu==null?"":item.ChucVu.TenChucVu)
                                </td>
                                <td>
                                    @Html.ActionLink("Sửa", "Edit", new { id = item.Id }) |
                                    @Html.ActionLink("Quyền hạn", "Permission", new { id = item.Id }) |
                                    @Html.ActionLink("Xóa", "Delete", new { id = item.Id })
                                </td>
                            </tr>
                        }

                    </table>
                </div>
            </div>
        </div>
    </div>